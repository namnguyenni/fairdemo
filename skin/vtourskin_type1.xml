<krpano>

	<skin_settings layout_width="100%"
	               layout_maxwidth=""
	               controlbar_width="100%"
	               controlbar_height.normal="40"
	               controlbar_height.mobile="38"
	               controlbar_offset.normal="10"
	               controlbar_offset.mobile="0"
	               controlbar_offset_closed="-2"
	               controlbar_overlap="0"
	               design_skin_images="vtourskin.png"
	               design_bgcolor="0x000000"
	               design_bgalpha="0"
	               design_bgborder="1,0 0xFFFFFF 0"
	               design_bgroundedge.no-ios="0"
	               design_bgroundedge.ios="1"
	               design_bgshadow="0 0 20 0x000000 0"
	               design_thumbborder_bgborder="4 0xFFFFFF 0"
	               design_thumbborder_padding="2"
	               design_thumbborder_bgroundedge="3"
	               design_text_css="color:#FFFFFF; font-family:Arial; font-weight:bold;"
	               design_text_shadow="1"
				   design_bg_menu_color="0xffffff"
				   design_bg_btn_menu_color="0x01a8cc"
				   buttonMenuTxt1="Thông tin hội trợ"
				   buttonMenuTxt2="Tour tự động"
				   buttonMenuTxt3="Vị trí trên GoogleMap"
				   buttonMenuTxt4="Mô hình 3D"
				   siteURL="https://vn3d.com.vn/"
	               />
	<style name="skin_arrowspotstyle" url="vtourskin_arrowspot.png" scale="0.5" edge="top" distorted="true"
	       tooltip=""
	       linkedscene=""
	       linkedscene_lookat=""
	       onclick="skin_hotspotstyle_click();"
	       onover="tween(scale,0.6);"
	       onout="tween(scale,0.5);"
	       onloaded="add_all_the_time_tooltip();if(linkedscene AND skin_settings.tooltips_hotspots, copy(tooltip,scene[get(linkedscene)].title); loadstyle(skin_tooltips); );"
	       />
	<style name="skin_youtubespotstyle" url="youtube.png" scale="0.5" edge="top" distorted="true"
	       tooltip=""
	       linkedscene=""
	       linkedscene_lookat=""
	       onclick="skin_hotspotstyle_click();"
	       onover="tween(scale,0.6);"
	       onout="tween(scale,0.5);"
	       onloaded="add_all_the_time_tooltip();if(linkedscene AND skin_settings.tooltips_hotspots, copy(tooltip,scene[get(linkedscene)].title); loadstyle(skin_tooltips); );"
	       />

</krpano>
